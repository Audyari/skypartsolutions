---
// src/pages/catalog/index.astro
import { getAircraftPartsWithDebug } from '../../utils/database';
import Layout from '../../components/Layout.astro';
import DebugInfo from '../../components/DebugInfo.astro';

export const prerender = false;

// State management
const debugMode = import.meta.env.DEV;
let debugInfo = {};
let parts = [];
let loading = true;
let error = null;

// Get search term from URL
const url = new URL(Astro.request.url);
const searchTerm = url.searchParams.get("search") || "";

try {
  loading = true;
  
  // Get data with debugging
  const result = await getAircraftPartsWithDebug();
  debugInfo = result.debugInfo;
  
  if (result.error) {
    error = result.error;
    console.error('‚ùå Error loading catalog:', result.error);
  } else {
    let filteredData = result.data || [];
    
    // Apply search filter if search term exists
    if (searchTerm && searchTerm.trim()) {
      const search = searchTerm.trim().toLowerCase();
      filteredData = filteredData.filter(part => 
        part.part_number?.toLowerCase().includes(search) ||
        part.description?.toLowerCase().includes(search) ||
        part.aircraft_effectivity?.toLowerCase().includes(search)
      );
    }
    
    parts = filteredData;
    console.log(`‚úÖ Data loaded successfully: ${parts.length} items`);
  }
  
} catch (err) {
  error = err;
  console.error('‚ùå Unexpected error in catalog page:', err);
  debugInfo.catchError = {
    message: err.message,
    stack: err.stack
  };
} finally {
  loading = false;
}
---

<Layout title="Aircraft Parts Catalog">
  <main class="flex-grow min-h-screen bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 py-8">
      
      <!-- Debug Header - hanya di development -->
      {debugMode && (
        <div class="debug-header bg-yellow-100 border border-yellow-400 p-3 rounded mb-6">
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-2">
              <span class="text-red-500">üîß</span>
              <strong class="text-gray-900">DEBUG MODE ACTIVE</strong>
              <span class="text-sm text-gray-600 ml-2">Hanya tampil di development</span>
            </div>
            <div class="flex gap-2">
              <button 
                onclick="location.reload()" 
                class="bg-blue-500 hover:bg-blue-700 text-white text-xs px-3 py-1 rounded transition-colors"
              >
                Muat Ulang
              </button>
            </div>
          </div>
        </div>
      )}

      <!-- Header -->
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold mb-2 text-gray-100">
          Aircraft Parts Catalog
        </h1>
        <p class="text-gray-400 max-w-3xl mx-auto">
          Browse our complete inventory of certified aircraft parts
        </p>
      </div>

      <!-- Search Section -->
      <div class="mb-8 bg-gray-800/50 backdrop-blur-sm rounded-2xl p-8 border border-gray-700/50 shadow-2xl">
        <form method="GET" class="flex flex-col xl:flex-row gap-8 items-start xl:items-end justify-between">
          
          <!-- Search Input -->
          <div class="flex-1 w-full space-y-4">
            <div class="space-y-2">
              <label for="search" class="block text-lg font-bold text-white">
                Find Aircraft Parts
              </label>
              <p class="text-sm text-gray-400 mb-2">
                Search our comprehensive inventory by part number, description, or aircraft compatibility
              </p>
            </div>

            <div class="relative max-w-2xl">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
              </div>
              <input
                type="text"
                id="search"
                name="search"
                placeholder="Try 'B737', '10-60552-22', or 'Pressure Switch'..."
                value={searchTerm}
                class="block w-full pl-12 pr-32 py-4 bg-gray-900/80 border border-gray-600 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 text-base"
              />
            </div>
          </div>

          <!-- Stats & Actions -->
          <div class="flex flex-col sm:flex-row gap-6 items-start sm:items-end">
            
            <!-- Results Badge -->
            <div class="flex items-center gap-4 bg-gray-900/60 rounded-lg px-4 py-3 border border-gray-700">
              <div class="text-right">
                <div class="text-2xl font-bold text-white">{parts.length}</div>
                <div class="text-xs text-gray-400 font-medium uppercase tracking-wide">
                  Items Found
                </div>
              </div>
              <div class="w-px h-8 bg-gray-600"></div>
              {searchTerm ? (
                <a
                  href="?"
                  class="flex items-center gap-2 text-sm text-gray-400 hover:text-white transition-colors group"
                >
                  <svg class="w-4 h-4 group-hover:rotate-90 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                  </svg>
                  Reset
                </a>
              ) : (
                <div class="w-4 h-4 rounded-full bg-green-400/20 flex items-center justify-center">
                  <div class="w-2 h-2 rounded-full bg-green-400" />
                </div>
              )}
            </div>

            <!-- Search Button -->
            <button
              type="submit"
              class="bg-white text-gray-900 hover:bg-gray-100 px-8 py-4 rounded-xl font-semibold transition-all duration-200 shadow-lg hover:shadow-xl hover:scale-105 flex items-center gap-3 group min-w-[140px] justify-center"
            >
              <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
              Search
            </button>
          </div>
        </form>

        <!-- Quick Access -->
        <div class="mt-8 pt-6 border-t border-gray-700/50">
          <div class="flex items-center justify-between">
            <span class="text-sm font-semibold text-gray-400">POPULAR SEARCHES</span>
            <div class="flex gap-3 flex-wrap">
              {["B737-Classic", "10-60552-22", "F28"].map((term) => (
                <a
                  href={`?search=${encodeURIComponent(term)}`}
                  class="px-4 py-2 bg-gray-700/50 hover:bg-gray-700 text-gray-300 hover:text-white text-sm font-medium rounded-lg transition-all duration-200 border border-gray-600 hover:border-gray-500 hover:scale-105"
                >
                  {term}
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>

      <!-- Loading State -->
      {loading && (
        <div class="loading-state text-center py-12">
          <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-500 mx-auto"></div>
          <p class="mt-4 text-gray-300">Memuat data katalog...</p>
          {debugMode && (
            <div class="mt-2 text-sm text-gray-500">
              Memeriksa koneksi database dan mengambil data...
            </div>
          )}
        </div>
      )}

      <!-- Error State -->
      {error && !loading && (
        <div class="error-state bg-red-900/50 border border-red-600 rounded-lg p-6 text-center">
          <div class="text-red-400 text-4xl mb-4">‚ö†Ô∏è</div>
          <h2 class="text-red-200 text-xl font-bold mb-2">Gagal Memuat Data</h2>
          <p class="text-red-300 mb-4">{error.message}</p>
          
          <div class="flex justify-center gap-4 mt-6">
            <button 
              onclick="location.reload()" 
              class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg transition-colors"
            >
              Coba Lagi
            </button>
            
            {debugMode && (
              <button 
                onclick="document.querySelector('.debug-info').classList.toggle('hidden')" 
                class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg transition-colors"
              >
                Tampilkan Detail Error
              </button>
            )}
          </div>

          {/* Detail Error untuk Debug */}
          {debugMode && (
            <div class="debug-info mt-4 p-4 bg-red-900/30 rounded hidden">
              <h3 class="font-bold text-red-200 mb-2">Detail Error:</h3>
              <pre class="text-xs text-red-300 whitespace-pre-wrap overflow-auto max-h-60">
                {JSON.stringify(debugInfo, null, 2)}
              </pre>
            </div>
          )}
        </div>
      )}

      <!-- Success State -->
      {!loading && !error && (
        <div class="catalog-content">
          
          {/* Info Summary dengan Debug */}
          <div class="info-summary bg-blue-900/20 border border-blue-700/50 rounded-lg p-4 mb-6">
            <div class="flex items-center justify-between">
              <div>
                <h2 class="text-blue-200 font-semibold">
                  Data berhasil dimuat! 
                  <span class="ml-2 bg-blue-500/20 text-blue-300 px-2 py-1 rounded text-sm">
                    {parts.length} items
                  </span>
                </h2>
                {debugMode && debugInfo.connection && (
                  <p class="text-sm text-blue-300 mt-1">
                    {debugInfo.connection.message}
                  </p>
                )}
              </div>
              
              {debugMode && (
                <button 
                  onclick="location.reload()" 
                  class="bg-green-600 hover:bg-green-700 text-white text-sm px-3 py-1 rounded transition-colors flex items-center gap-2"
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                  </svg>
                  Refresh Data
                </button>
              )}
            </div>
          </div>

          {/* Parts Table */}
          {parts.length > 0 ? (
            <div class="overflow-x-auto border border-gray-700 rounded-lg shadow-xl">
              <table class="w-full divide-y divide-gray-700 min-w-[1000px] text-sm">
                <thead class="bg-gray-800">
                  <tr>
                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-200 uppercase tracking-wider">Part Number</th>
                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-200 uppercase tracking-wider">Description</th>
                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-200 uppercase tracking-wider">Aircraft</th>
                    <th class="px-4 py-3 text-center text-xs font-semibold text-gray-200 uppercase tracking-wider">Qty</th>
                    <th class="px-4 py-3 text-center text-xs font-semibold text-gray-200 uppercase tracking-wider">UOM</th>
                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-200 uppercase tracking-wider">Condition</th>
                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-200 uppercase tracking-wider">Location</th>
                    <th class="px-4 py-3 text-center text-xs font-semibold text-gray-200 uppercase tracking-wider">Image</th>
                    <th class="px-4 py-3 text-center text-xs font-semibold text-gray-200 uppercase tracking-wider">Action</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-700 bg-gray-800">
                  {parts.map((part) => (
                    <tr class="hover:bg-gray-700 transition-colors duration-150">
                      <td class="px-4 py-4 text-xs font-medium text-blue-300 whitespace-nowrap">{part.part_number}</td>
                      <td class="px-4 py-4 text-xs text-gray-300">
                        <div class="max-w-[200px] break-words">{part.description}</div>
                      </td>
                      <td class="px-4 py-4 text-xs">
                        <span class="bg-blue-600 text-blue-100 px-2.5 py-1 rounded-md text-xs font-medium inline-block">
                          {part.aircraft_effectivity}
                        </span>
                      </td>
                      <td class="px-4 py-4 text-xs text-center">
                        <span class="inline-flex items-center px-2.5 py-1 rounded-md text-xs font-semibold bg-green-600 text-green-100">
                          {part.quantity}
                        </span>
                      </td>
                      <td class="px-4 py-4 text-xs text-gray-300 text-center font-medium">{part.uom}</td>
                      <td class="px-4 py-4 text-xs text-gray-300">{part.condition}</td>
                      <td class="px-4 py-4 text-xs">
                        <span class="bg-purple-600 text-purple-100 px-2.5 py-1 rounded-md text-xs font-medium inline-block">
                          {part.location}
                        </span>
                      </td>
                      <td class="px-4 py-4 text-center">
                        {part.image_url ? (
                          <a href={part.image_url} target="_blank" class="block transition-transform hover:scale-110">
                            <img src={part.image_url} alt={part.part_number} class="w-14 h-14 object-cover rounded-lg border-2 border-gray-600 hover:border-blue-500 mx-auto shadow-md"/>
                          </a>
                        ) : (
                          <div class="w-14 h-14 bg-gray-700 rounded-lg border-2 border-gray-600 flex items-center justify-center mx-auto">
                            <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                          </div>
                        )}
                      </td>
                      <td class="px-4 py-4 text-center">
                        <a
                          href={`/quote?part_number=${part.part_number}&description=${encodeURIComponent(part.description)}&aircraft=${encodeURIComponent(part.aircraft_effectivity)}`}
                          class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-2 rounded-lg text-xs inline-flex items-center transition-colors whitespace-nowrap font-medium shadow-md hover:shadow-lg"
                        >
                          <span class="mr-1.5">Get Quote</span>
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                          </svg>
                        </a>
                      </td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          ) : (
            !error && (
              <div class="p-8 text-center text-gray-300 bg-gray-800 rounded-lg border border-gray-700">
                {searchTerm ? (
                  <>
                    <svg class="w-16 h-16 text-gray-600 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                    </svg>
                    <p class="mb-2 text-base font-medium">
                      No parts found for "<span class="text-blue-400">{searchTerm}</span>"
                    </p>
                    <p class="text-gray-500 text-sm mb-4">
                      Try different search terms or browse all parts
                    </p>
                    <a href="?" class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                      View All Parts
                    </a>
                  </>
                ) : (
                  <>
                    <svg class="w-16 h-16 text-gray-600 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                    </svg>
                    <p class="mb-2 text-base font-medium">No parts in inventory</p>
                    <p class="text-gray-500 text-sm">
                      Please check back later or contact our sales team
                    </p>
                  </>
                )}
              </div>
            )
          )}
        </div>
      )}

      <!-- Contact CTA -->
      <div class="bg-gradient-to-r from-gray-800 to-gray-900 border border-gray-700 rounded-lg p-6 mt-8 text-center shadow-lg">
        <h3 class="mb-2 text-blue-400 text-base font-semibold">
          Can't find what you're looking for?
        </h3>
        <p class="mb-4 text-gray-300 text-sm">
          Our sales team is ready to help with special requests and custom solutions
        </p>
        <a
          href="/contact"
          class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2.5 rounded-lg text-sm font-medium transition-colors inline-flex items-center shadow-md hover:shadow-lg"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          Contact Sales Team
        </a>
      </div>
    </div>
  </main>

  <!-- Debug Info Component -->
  {debugMode && <DebugInfo data={debugInfo} />}
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
  }
  .loading-state {
    min-height: 200px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
</style>