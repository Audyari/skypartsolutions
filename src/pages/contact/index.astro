                  <p class="text-sm text-gray-500">Mon-Fri, 8:00 AM - 5:00 PM</p>
                </div>
              </div>

              <div class="flex items-start">
                <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center mr-4">
                  <span class="text-blue-600">‚úâÔ∏è</span>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900">Email</h3>
                  <p class="text-gray-600">sales@skypartsolutions.com</p>
                  <p class="text-gray-600">support@skypartsolutions.com</p>
                </div>
              </div>

              <div class="flex items-start">
                <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center mr-4">
                  <span class="text-blue-600">üìç</span>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900">Headquarters</h3>
                  <p class="text-gray-600">
                    SkyPart Solutions Building<br>
                    Jl. Aviation Business Park No. 123<br>
                    Jakarta 12550, Indonesia
                  </p>
                </div>
              </div>

              <div class="flex items-start">
                <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center mr-4">
                  <span class="text-blue-600">üåê</span>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900">Global Offices</h3>
                  <p class="text-gray-600">Singapore ‚Ä¢ Dubai ‚Ä¢iami ‚Ä¢ Frankfurt</p>
                </div>
              </div>
            </div>

            <!-- Emergency Contact -->
            <div class="mt-8 p-6 bg-red-50 border border-red-200 rounded-lg">
              <h3 class="font-semibold text-red-800 mb-2">üÜö Emergency AOG Support</h3>
              <p class="text-red-700 text-sm mb-2">24/7 Aircraft on Ground Support</p>
              <p class="font-semibold text-red-800">+62 811 1234 5678</p>
            </div>
          </div>

          <!-- Contact Form -->
    
          <div class="lg:col-span-2">
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
              <h2 class="text-2xl font-bold text-gray-900 mb-6">Send Us a Message</h2>
              
              <form class="space-y-6">
                <!-- Company & Contact Info -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div>
                    <label for="company" class="block text-sm font-medium text-gray-700 mb-2">Company Name *</label>
                    <input type="text" id="company" name="company" required 
                      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                  </div>
                  <div>
                    <label for="contact-person" class="block text-sm font-medium text-gray-700 mb-2">Contact Person *</label>
                    <input type="text" id="contact-person" name="contact-person" required 
                      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                  </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div>
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address *</label>
                    <input type="email" id="email" name="email" required 
                      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                  </div>
                  <div>
                    <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">Phone Number *</label>
                    <input type="tel" id="phone" name="phone" required 
                      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                  </div>
                </div>

                <!-- Inquiry Details -->
                <div>
                  <label for="inquiry-type" class="block text-sm font-medium text-gray-700 mb-2">Inquiry Type *</label>
                  <select id="inquiry-type" name="inquiry-type" required 
                    class="w-full py-2 px-4 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    <option value="">Select inquiry type</option>
                    <option value="parts-request">Parts Request / Quotation</option>
                    <option value="technical-support">Technical Support</option>
                    <option value="partnership">Partnership Opportunity</option>
                    <option value="careers">Careers</option>
                    <option value="other">Other</option>
                  </select>
                </div>

                <div>
                  <button type="submit" class="w-full py-3 bg-blue-600 text-white rounded-lg">Send Message</button>
                </div>

            </form>
          </div>
        </div>
      </div>
    </section>
