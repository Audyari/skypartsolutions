---
import Layout from "../../components/Layout.astro";
import { supabase } from "../../utils/database";

export const prerender = false;

const { partNumber } = Astro.params;  // Ambil part number dari URL

if (!partNumber) {
  throw new Error("No part number provided");
}

// Fetch part data dari database
let part;
if (supabase) {
  const { data, error } = await supabase
    .from("aircraft_parts")
    .select("*")
    .eq("part_number", partNumber)  // Filter by part number
    .single();
  part = data ? data : null;
  if (error || !part) {
    console.error(error);
    throw new Error("Part not found");
  }
}
---

<Layout title={`${part?.part_number} | SkyPart Solutions`}>
  <article class="max-w-4xl mx-auto p-6">
    <header class="border-b pb-6 mb-6">
      <h1 class="text-4xl font-bold text-gray-900">{part?.part_number}</h1>
      <p class="text-xl text-gray-600 mt-2">{part?.description}</p>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Part Details -->
      <div>
        <h2 class="text-2xl font-semibold mb-4">Part Information</h2>
        <div class="space-y-3">
          <div>
            <strong>Aircraft:</strong> 
            <span class="ml-2 bg-blue-100 text-blue-800 px-2 py-1 rounded">
              {part?.aircraft_effectivity}
            </span>
          </div>
          <div><strong>Condition:</strong> {part?.condition}</div>
          <div><strong>Quantity:</strong> {part?.quantity} {part?.uom}</div>
          <div><strong>Location:</strong> {part?.location}</div>
        </div>
      </div>

      <!-- Quote Request Form -->
      <div class="bg-gray-50 p-6 rounded-lg">
        <h2 class="text-2xl font-semibold mb-4">Request Quote</h2>
        <form action="/api/quote-request" method="post">
          <input type="hidden" name="part_number" value={part?.part_number} />
          
          <div class="mb-4">
            <label class="block mb-2 font-medium">Quantity Needed</label>
            <input type="number" name="quantity" class="w-full p-2 border rounded" min="1" required />
          </div>
          
          <div class="mb-4">
            <label class="block mb-2 font-medium">Your Email</label>
            <input type="email" name="email" class="w-full p-2 border rounded" required />
          </div>
          
          <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded hover:bg-blue-700">
            Request Quote
          </button>
        </form>
      </div>
    </div>

    <!-- Back to Catalog -->
    <div class="mt-8">
      <a href="/catalog" class="text-blue-600 hover:underline">‚Üê Back to Catalog</a>
    </div>
  </article>
</Layout>