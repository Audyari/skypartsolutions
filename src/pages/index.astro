---
import { getEntry } from "astro:content";
import Alert from "../components/Alert.astro";
import Guide from "../components/Guide.astro";
import Layout from "../components/Layout.astro";
import TableRow from "../components/TableRow.astro";
import { supabase } from "../utils/database";

export const prerender = false;

let frameworks;
let frameworksError;

// Fetch frameworks data from Supabase if connection is set up
if (supabase) {
  const { data, error } = await supabase
    .from("frameworks")
    .select("*")
    .order("likes", { ascending: false });
  frameworks = data;
  frameworksError = error;
}

// Get guides
const connectGuide = await getEntry("guides", "guide-connect-supabase");
const fetchDataGuide = await getEntry("guides", "guide-fetch-data");
---

<Layout title="SkyPartSolutions">
  {
    supabase ? (
      frameworks ? (
        <>
          {/* üöÄ Hero Section */}

          <section class="bg-linear-to-r from-blue-900 to-blue-700 text-white py-20">
            <div class="max-w-7xl mx-auto px-4 text-center">
              <h1 class="text-4xl md:text-6xl font-bold mb-6">
                Premium <span class="text-blue-300">Aircraft Parts</span>
              </h1>
              <p class="text-xl mb-8 max-w-2xl mx-auto">
                Your trusted partner for quality aviation components and
                reliable solutions
              </p>
              <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a
                  href="/catalog"
                  class="bg-white text-blue-600 px-8 py-3 rounded-lg font-bold hover:bg-blue-50 transition"
                >
                  Browse Catalog
                </a>
                <a
                  href="/contact"
                  class="border border-white text-white px-8 py-3 rounded-lg font-bold hover:bg-white hover:text-blue-600 transition"
                >
                  Get Contact
                </a>
              </div>
            </div>
          </section>

          {/* üéØ Features/Services Section */}

          <section class="py-16 bg-white">
            <div class="max-w-7xl mx-auto px-4">
              <h2 class="text-3xl font-bold text-center mb-12">
                Why Choose SkyPartSolutions?
              </h2>
              <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="text-center">
                  <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <span class="text-2xl">‚úà</span>
                  </div>
                  <h3 class="text-xl font-bold mb-2">Certified Quality</h3>
                  <p class="text-gray-600">
                    All parts meet aviation standards and certifications
                  </p>
                </div>
                <div class="text-center">
                  <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <span class="text-2xl">üöö</span>
                  </div>
                  <h3 class="text-xl font-bold mb-2">Fast Delivery</h3>
                  <p class="text-gray-600">
                    Global shipping with expedited options available
                  </p>
                </div>
                <div class="text-center">
                  <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <span class="text-2xl">üîß</span>
                  </div>
                  <h3 class="text-xl font-bold mb-2">Expert Support</h3>
                  <p class="text-gray-600">
                    Technical assistance from aviation specialists
                  </p>
                </div>
              </div>
            </div>
          </section>

          {/* üì¶ Featured Products Section */}

          <section class="py-16 bg-gray-100">
            <div class="max-w-7xl mx-auto px-4">
              <h2 class="text-3xl font-bold text-center mb-12">
                Featured Products
              </h2>
              <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="bg-white rounded-lg shadow-md p-6">
                  <h3 class="text-xl font-bold mb-2">Engine Components</h3>
                  <p class="text-gray-600 mb-4">
                    High-performance engine parts and accessories
                  </p>
                  <a
                    href="/products/engine"
                    class="text-blue-600 font-bold hover:underline"
                  >
                    View Products ‚Üí
                  </a>
                </div>
                <div class="bg-white rounded-lg shadow-md p-6">
                  <h3 class="text-xl font-bold mb-2">Avionics</h3>
                  <p class="text-gray-600 mb-4">
                    Navigation and communication systems
                  </p>
                  <a
                    href="/products/avionics"
                    class="text-blue-600 font-bold hover:underline"
                  >
                    View Products ‚Üí
                  </a>
                </div>
                <div class="bg-white rounded-lg shadow-md p-6">
                  <h3 class="text-xl font-bold mb-2">Landing Gear</h3>
                  <p class="text-gray-600 mb-4">
                    Reliable landing systems and components
                  </p>
                  <a
                    href="/products/landing-gear"
                    class="text-blue-600 font-bold hover:underline"
                  >
                    View Products ‚Üí
                  </a>
                </div>
              </div>
            </div>
          </section>

          {/* üè¢ About Section */}

          <section class="py-16 bg-white">
            <div class="max-w-7xl mx-auto px-4">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
                <div>
                  <h2 class="text-3xl font-bold mb-6">
                    Trusted Aviation Partner
